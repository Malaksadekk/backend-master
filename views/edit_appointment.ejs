<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Edit Appointment</title>
  <link rel="stylesheet" href="/fontawesome/css/all.min.css" />
  <link rel="stylesheet" href="/adminlte/dist/css/adminlte.min.css" />
  <style>
    /* Your custom styles here */
  </style>
</head>
<body class="layout-fixed sidebar-expand-lg bg-body-tertiary">
  <div class="app-wrapper">
    <!-- Header -->
    <nav class="app-header navbar navbar-expand bg-body" style="min-height: 50px">
      <div class="container-fluid">
        <h3>Hospital Admin Dashboard</h3>
      </div>
    </nav>

    <!-- Sidebar -->
    <aside class="app-sidebar bg-body-secondary shadow" data-bs-theme="dark">
      <div class="sidebar-brand">
        <a href="/home" class="brand-link">
          <span class="brand-text fw-light">Admin Dashboard</span>
        </a>
      </div>
      <div class="sidebar-wrapper">
        <nav class="mt-2">
          <ul class="nav sidebar-menu flex-column">
            <li class="nav-item">
              <a href="/doctors" class="nav-link">
                <i class="nav-icon fas fa-user-md"></i>
                <p>Doctors</p>
              </a>
            </li>
            <li class="nav-item">
              <a href="/appointments" class="nav-link">
                <i class="nav-icon fas fa-calendar-check"></i>
                <p>Appointments</p>
              </a>
            </li>
            <!-- Add other navigation items as needed -->
          </ul>
        </nav>
      </div>
    </aside>

    <!-- Main Content -->
    <main class="app-main">
      <div class="app-content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-12">
              <div class="card mt-4">
                <div class="card-header">
                  <h3 class="card-title">Edit Appointment</h3>
                </div>
                <div class="card-body">
                  <form action="/appointments/<%= appointment._id %>/edit" method="POST">
                    <div class="mb-3">
                      <label for="name" class="form-label">Name</label>
                      <input
                        type="text"
                        class="form-control"
                        id="name"
                        name="name"
                        value="<%= appointment.name %>"
                        required
                      />
                    </div>
                    <div class="mb-3">
                      <label for="department" class="form-label">Department</label>
                      <select class="form-control" id="department" name="department" required>
                        <option value="">Select Department</option>
                        <option value="Dental" <%= appointment.department === 'Dental' ? 'selected' : '' %>>Dental</option>
                        <option value="U.C" <%= appointment.department === 'U.C' ? 'selected' : '' %>>U.C</option>
                        <!-- Add other departments as needed -->
                      </select>
                    </div>
                    <div class="mb-3">
                      <label for="phoneNumber" class="form-label">Phone Number</label>
                      <input
                        type="text"
                        class="form-control"
                        id="phoneNumber"
                        name="phoneNumber"
                        value="<%= appointment.phoneNumber %>"
                        required
                      />
                    </div>
                    <div class="mb-3">
                      <label for="datePicker" class="form-label">Date</label>
                      <input
                        type="datetime-local"
                        class="form-control"
                        id="datePicker"
                        name="datePicker"
                        value="<%= new Date(appointment.datePicker).toISOString().slice(0,16) %>"
                        required
                      />
                    </div>
                    <button type="submit" class="btn btn-primary">Update Appointment</button>
                    <a href="/appointments" class="btn btn-secondary">Cancel</a>
                  </form>
                  <% if (errors && errors.length > 0) { %>
                    <div class="mt-3">
                      <% errors.forEach(function(error) { %>
                        <div class="alert alert-danger"><%= error %></div>
                      <% }); %>
                    </div>
                  <% } %>
                </div>
              </div>
            </div>
          </div> <!-- /.row -->
        </div> <!-- /.container-fluid -->
      </div> <!-- /.app-content -->
    </main> <!-- /.app-main -->

    <!-- Scripts -->
    <script src="/adminlte/dist/js/adminlte.min.js"></script>
  </div>
</body>
</html>